<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MusicPlayer" android:padding="4dp" android:id="@+id/layoutBody">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="6">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@mipmap/ic_launcher_round"
                        android:id="@+id/imageView" android:layout_weight="1"
                        android:layout_marginTop="5dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                    <TextView
                            android:text="@string/song_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/tvTitle"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:gravity="bottom|center_horizontal" android:padding="5dp"/>
                    <TextView
                            android:text="@string/song_artist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/tvArtist"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textSize="25sp"
                            android:gravity="bottom|center_horizontal"/>
                    <TextView
                            android:text="@string/song_album"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/tvAlbum"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textSize="20sp"
                            android:gravity="bottom|center_horizontal" android:paddingBottom="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="bottom">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <SeekBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/seekBar" android:layout_weight="1"
                        android:layout_marginLeft="5dp" android:layout_gravity="center"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvTime" tools:text="@string/song_time"
                        android:layout_marginRight="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textSize="15sp"
                        android:layout_marginLeft="5dp" android:layout_gravity="center_horizontal"
                        android:text="@string/song_time"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp">
                <Button
                        android:text="@string/previous_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/bPrevious" android:layout_weight="1"
                        android:layout_marginLeft="5dp" style="@style/Widget.AppCompat.Button.Colored"
                />
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/bPlay" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Colored"
                        tools:text="Play" android:text="@string/play_song"/>
                <Button
                        android:text="@string/next_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/bNext" android:layout_weight="1"
                        android:layout_marginLeft="5dp" style="@style/Widget.AppCompat.Button.Colored"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>